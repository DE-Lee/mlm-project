<?xml version="1.0" encoding="UTF-8"?>
<!-- PC CycloneDDS Configuration -->
<!-- ROS_DOMAIN_ID: 3 (Robot1과 통일) -->
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain>
    <General>
      <Interfaces>
        <NetworkInterface name="wlp0s20f3"/>
      </Interfaces>
      <AllowMulticast>true</AllowMulticast>
      <MaxMessageSize>65500B</MaxMessageSize>
      <FragmentSize>4000B</FragmentSize>
    </General>
    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>120</MaxAutoParticipantIndex>
      <Peers>
        <Peer address="172.16.10.172"/>  <!-- Robot1 IP -->
        <Peer address="172.16.10.37"/>   <!-- Robot2 IP -->
        <Peer address="172.16.11.203"/>  <!-- PC IP -->
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>

<?xml version="1.0" encoding="UTF-8"?>
<!-- PC CycloneDDS Configuration -->
<!-- ROS_DOMAIN_ID: 3 (Robot과 통일) -->
<!-- WiFi 환경 최적화: Robot과 동일한 설정 -->
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="3">
    <General>
      <Interfaces>
        <NetworkInterface name="wlp0s20f3"/>
      </Interfaces>
      <!-- Robot과 동일: SPDP만 멀티캐스트, 나머지는 유니캐스트 -->
      <AllowMulticast>spdp</AllowMulticast>
      <!-- Robot과 동일: WiFi 최적화 FragmentSize -->
      <FragmentSize>1280 B</FragmentSize>
    </General>
    <Discovery>
      <ParticipantIndex>auto</ParticipantIndex>
      <MaxAutoParticipantIndex>120</MaxAutoParticipantIndex>
      <!-- Unicast Peers: 모든 로봇 IP -->
      <Peers>
        <Peer address="172.16.10.172"/>  <!-- Robot1 IP -->
        <Peer address="172.16.10.37"/>   <!-- Robot2 IP -->
        <Peer address="172.16.11.222"/>  <!-- PC IP (self) -->
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>
